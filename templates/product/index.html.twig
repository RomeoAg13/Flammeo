{% extends 'base.html.twig' %}

{% block title %}Flammeo | Produits{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 1435px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <h1>All of our Games</h1>

        <ul class="product-card">
            {% for product in products %}
                <li>
                    <img src="{{ product.getImage() }}" alt="{{ product.getName() }}">
                    <div class="product-name">{{ product.getName() }}</div>
                    <div class="product-price">{{ product.getPrice() }}â‚¬</div>
                    <a href="{{ path('cart_add', {id: product.getId()}) }}" class="btn-primary">
                        Add to cart
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}