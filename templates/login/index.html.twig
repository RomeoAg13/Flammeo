{% extends 'base.html.twig' %}

{% block title %}Flameo | Register{% endblock %}

{% block body %}
    <style>

.example-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: Arial, sans-serif;
  padding: 20px;
  width: 25%;
  background-color: white;
  border-radius: 25px;
  box-shadow: 12px 12px 2px 1px rgba(0, 0, 0, 0.2);
}

        .form-container {
            display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
  height: 93vh;
        }

        h1 {
            text-align: center;
            font-size: 2rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 40px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-size: 1rem;
            color: #333;
            margin-bottom: 8px;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            font-size: 1rem;
            color: #333;
            border-radius: 8px;
            border: 1px solid #ddd;
            margin-bottom: 10px;
            transition: border-color 0.3s ease;
            background-color: #f9f9f9;
        }

        .form-control:focus {
            border-color: #ff7f50;
            outline: none;
            background-color: #fff;
        }

        .btn-primary {
            width: 100%;
            padding: 12px;
            background-color: #ff7f50;
            color: white;
            border: none;
            font-size: 1.1rem;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #ff6330;
        }

        .btn-primary:active {
            background-color: #e65c00;
        }

        .form-control::placeholder {
            color: #aaa;
        }
        .popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        .popup-message {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            max-width: 400px;
            text-align: center;
        }

        .popup-message .close-btn {
            background: #ff4b5c;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            font-size: 16px;
            border-radius: 5px;
        }
        
    </style>

<div class="form-container">
    <div class="example-wrapper">
        <h1>Login</h1>
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter your email' } }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.password) }}
                {{ form_widget(form.password, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter your password' } }) }}
            </div>
            <button type="submit" class="btn-primary">LOGIN</button>
        {{ form_end(form) }}
    </div>
    <div id="errorPopup" class="popup">
        <div class="popup-message">
            <p id="errorMessage">Invalid credentials. Please try again.</p>
            <button class="close-btn" onclick="closePopup()">Close</button>
        </div>
    </div>

    </div>
    <script>
        // Display error popup if flash message exists
        {% if app.flashes('error') %}
            document.getElementById('errorPopup').style.display = 'flex';
        {% endif %}

        function closePopup() {
            document.getElementById('errorPopup').style.display = 'none';
        }
    </script>
    
{% endblock %}
