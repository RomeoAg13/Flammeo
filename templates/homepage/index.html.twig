{% extends 'base.html.twig' %}

{% block title %}Flameo | Homepage{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <h1>Welcome,</h1>

    <ul>
        {% for product in products|slice(products|length - 5, products|length) %}
        <li> {{product.getName()}}, {{product.getPrice()}}, {{product.getImage()}} </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}